# Telegram Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHANNEL_ID=-1001234567890
TELEGRAM_ENABLED=true

# Timezone (IANA timezone name)
TIMEZONE=Asia/Riyadh

# Daily Report Time (HH:MM in configured timezone)
DAILY_REPORT_TIME=12:00

# Webhook Security (optional - leave empty to disable)
WEBHOOK_SECRET=

# Database Path
DATABASE_PATH=./data/trades.db

# Validation Mode: "strict" or "lenient"
# strict: reject trades that don't meet exchange minimums
# lenient: warn but record anyway
VALIDATION_MODE=strict

# Logging Level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
